{
  "name": "cbp-build-manager",
  "displayName": "CBP 构建管理器",
  "description": "用于管理和构建 Code::Blocks 项目的 VS Code 扩展",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:cbpProjects"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cbp-build-manager.git"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cbp-build-manager.buildSelected",
        "title": "构建所选项目",
        "icon": "$(play)"
      },
      {
        "command": "cbp-build-manager.refreshProjects",
        "title": "刷新项目",
        "icon": "$(refresh)"
      },
      {
        "command": "cbp-build-manager.setCompileCommandsPath",
        "title": "设置编译命令路径"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cbp-builder",
          "title": "CBP 构建器",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "cbp-builder": [
        {
          "id": "cbpProjects",
          "name": "项目"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "cbp-build-manager.buildSelected",
          "group": "navigation",
          "when": "view == cbpProjects"
        },
        {
          "command": "cbp-build-manager.refreshProjects",
          "group": "navigation",
          "when": "view == cbpProjects"
        }
      ],
      "view/item/context": [
        {
          "command": "cbp-build-manager.setCompileCommandsPath",
          "group": "inline",
          "when": "view == cbpProjects && viewItem == cbpProject"
        }
      ]
    },
    "configuration": {
      "title": "CBP 构建管理器",
      "properties": {
        "cbpBuildManager.cbp2clangPath": {
          "type": "string",
          "default": "cbp2clang",
          "description": "cbp2clang 可执行文件的路径"
        },
        "cbpBuildManager.compileCommandsPath": {
          "type": "string",
          "default": "../../../",
          "description": "compile_commands.json 的相对输出路径（相对于 .cbp 文件）"
        },
        "cbpBuildManager.convertCommand": {
          "type": "string",
          "default": "{cbp2clang} {cbpFile} {compileCommands} -l ld",
          "description": "转换 CBP 到 compile_commands.json 的命令模板。变量：{cbp2clang}, {cbpFile}, {compileCommands}"
        },
        "cbpBuildManager.buildCommand": {
          "type": "string",
          "default": "./build.bat",
          "description": "运行 cbp2clang 生成的构建脚本的命令"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.64.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
